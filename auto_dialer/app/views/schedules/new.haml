%h1 New schedule

= error_messages_for :schedule 

- form_for(@schedule) do |f| 
  %p
    %b Start time in natural language
    %br
    = f.text_field :start 
  %p
    %b Tags
    %br
    = f.text_field :tags
  %p
    %b Application
    %br
    = f.collection_select('app_id', @apps, :id, :name)
  %p
    = f.submit "Create"
    
= link_to 'Back', schedules_path 