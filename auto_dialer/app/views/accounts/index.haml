%h1 Listing accounts

%table
  %tr
    %th Name
    %th Enabled

- for account in @accounts
  %tr
    %td=h account.name
    %td=h account.enabled

    %td= link_to 'Show', account_path(account)
    %td= link_to 'Edit', edit_account_path(account)
    %td= link_to 'Destroy', account_path(account), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete
    
= link_to 'New account', new_account_path 