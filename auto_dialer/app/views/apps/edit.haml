%h1 Editing app

= error_messages_for :app

- form_for(@app) do |f|
  %p
    %b Name
    = f.text_field :name 
  %p
    %b Wait wav
    = f.text_field :wait_wav 
  %p
    %b App human
    = f.text_field :app_human 
  %p
    %b App machine
    = f.text_field :app_machine 
  %p
    %b App beep
    = f.text_field :app_beep
  %p
    %b Start URL
    = f.text_field :start_url 
  %p
    %b Calls Per Minute
    = f.text_field :calls_per_minute 
  %p 
    %b Fields to send to script
    = f.text_field :fields
    %br
    %text_fields
      %b Valid fields are: 
      - for name in Contact.column_names
        = name
        
  %p= f.submit "Update"
  
= link_to 'Show', app_path(@app)
= link_to 'Back', apps_path

